@model IEnumerable<App.Restaurante.Models.Grupo>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Mantenimiento de Grupo</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <p class="mb-4">
                <a href="#" onclick="appRestaurante.getModal('@Url.Action("Create")');" data-toggle="modal"
                   data-target="#modal-container" class="btn btn-success">
                    <span class="fa fa-plus"></span> Crear Grupo

                </a>
            </p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdGrupo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descripcion)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdGrupo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descripcion)
                            </td>
                            <td>
                                <a href="#" onclick="appRestaurante.getModal('@Url.Action("Edit",new { id = item.IdGrupo })');" data-toggle="modal"
                                   data-target="#modal-container" class="btn btn-success">
                                    <span class="fa fa-edit"></span> Editar
                                </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@Modal.GetModal("Mantenimiento de Grupo","")
<script src="~/App_JS/appRestaurante.js" type="text/javascript"></script>