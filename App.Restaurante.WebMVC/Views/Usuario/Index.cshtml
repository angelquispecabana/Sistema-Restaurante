@model IEnumerable<App.Restaurante.Models.Usuario>

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">Mantenimiento de Usuario</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <p class="mb-4">
                <a href="#" onclick="appRestaurante.getModal('@Url.Action("Create")');" data-toggle="modal"
                   data-target="#modal-container" class="btn btn-success">
                    <span class="fa fa-plus"></span> Crear Sub Grupo

                </a>
            </p>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.IdUsuario)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Nombres)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Apellidos)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Estado)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.IdUsuario)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Nombres)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Apellidos)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Estado)
                            </td>
                            <td>
                                <a href="#" onclick="appRestaurante.getModal('@Url.Action("Edit",new { id = item.IdUsuario })');" data-toggle="modal"
                                   data-target="#modal-container" class="btn btn-success">
                                    <span class="fa fa-edit"></span> Editar

                                </a>
                                <a href="#" onclick="appRestaurante.getModal('@Url.Action("Delete",new { id = item.IdUsuario })');" data-toggle="modal"
                                   data-target="#modal-container" class="btn btn-danger">
                                    <span class="fa fa-trash"></span> Eliminar
                                </a>
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

@Modal.GetModal("Mantenimiento de Usuario", "")
<script src="~/App_JS/appRestaurante.js" type="text/javascript"></script>